<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <RezipVSIXFiles>true</RezipVSIXFiles>
    <SignOutput>true</SignOutput>
    <BuildProjectReferences>false</BuildProjectReferences>
  </PropertyGroup>

  <Import Project="setup.proj" />

  <ItemGroup>
    <ReleaseFile Include="$(BuildOutputRoot)setup\en-us\PythonToolsInstaller.msi">
      <Name>PTVS $(CustomBuildIdentifier) VS $(VSTargetName).msi</Name>
    </ReleaseFile>
    <ReleaseFile Include="$(BuildOutputRoot)setup\Microsoft.PythonTools.ML.vsix" Condition="Exists('$(BuildOutputRoot)setup\Microsoft.PythonTools.ML.vsix')">
      <Name>PTVS ML $(CustomBuildIdentifier).vsix</Name>
    </ReleaseFile>
    <ReleaseFile Include="$(BuildOutputRoot)setup\Microsoft.PythonTools.Samples.vsix" Condition="Exists('$(BuildOutputRoot)setup\Microsoft.PythonTools.Samples.vsix')">
      <Name>PTVS Samples $(CustomBuildIdentifier).vsix</Name>
    </ReleaseFile>
  </ItemGroup>

  <Target Name="CopyToRelease" AfterTargets="SignFiles" Inputs="@(ReleaseFile)" Outputs="@(ReleaseFile->'$(BuildOutputRoot)release\%(Name)')">
    <Copy SourceFiles="@(ReleaseFile->'$(BuildOutputRoot)%(Identity)')"
          DestinationFiles="@(ReleaseFile->'$(BuildOutputRoot)release\%(Name)')"
          OverwriteReadOnlyFiles="true" />
  </Target>

  <Import Project="$(TargetsPath)\Common.Build.targets"/>
  <Import Project="$(TargetsPath)\Common.Build.VSSDK.targets"/>
</Project>
