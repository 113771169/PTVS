<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.targets" />
  
  <Target Name="_SetPath" BeforeTargets="ClCompile" Condition="$(VCToolsInstallDir) != '' and $(VisualStudioVersion) == '15.0'">
    <SetEnv Name="Path" Value="%Path%;$(VCToolsInstallDir)\bin" Prefix="false" Target="User" Condition="!$(Path.Contains('$(VCToolsInstallDir)\bin'))" Verbosity="High" />
  </Target>
</Project>
