<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- Ensures that if this file changes it forces a rebuild -->
  <PropertyGroup>
    <MSBuildAllProjects>
      $(MSBuildAllProjects);$(TargetsPath)\Common.Build.Traversal.targets
    </MSBuildAllProjects>
  </PropertyGroup>

  <Target Name="PrepareForBuild" />

  <Target Name="_PrepareProjectFiles" BeforeTargets="PrepareForBuild">
    <ItemGroup>
      <_ProjectFile Include="@(ProjectFile)">
        <Platform>$([msbuild]::ValueOrDefault(%(ProjectFile.Platform), $(Platform)))</Platform>
        <Platform Condition="%(ProjectFile.Extension) == '.wixproj' and $(Platform) == 'Win32'">x86</Platform>
      </_ProjectFile>
    </ItemGroup>
    <Message Text="@(_ProjectFile->'Building %(Filename)%(Extension) with Platform=%(Platform);%(Properties)','
')" Importance="low" />
  </Target>

  <Target Name="Rebuild" DependsOnTargets="PrepareForBuild;Clean;Build">
  </Target>

  <Target Name="Build" DependsOnTargets="PrepareForBuild">
    <MSBuild Projects="@(_ProjectFile)" Properties="%(_ProjectFile.Properties);Platform=%(_ProjectFile.Platform)" Targets="Build"/>
    <MSBuild Projects="@(SequencedProjectFile)" Properties="%(SequencedProjectFile.Properties)" Targets="Build"/>
  </Target>

  <Target Name="Clean" DependsOnTargets="PrepareForBuild">
    <MSBuild Projects="@(_ProjectFile)" Properties="%(_ProjectFile.Properties);Platform=%(_ProjectFile.Platform)" Targets="Clean"/>
    <MSBuild Projects="@(SequencedProjectFile)" Properties="%(SequencedProjectFile.Properties)" Targets="Clean"/>
  </Target>

</Project>
